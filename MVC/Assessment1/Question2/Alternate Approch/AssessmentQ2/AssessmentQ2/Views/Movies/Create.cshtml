@model AssessmentQ2.Models.Movie

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Moviename)
        @Html.TextBoxFor(model => model.Moviename, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Moviename)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateofRelease)
        @Html.EditorFor(model => model.DateofRelease, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DateofRelease)
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
